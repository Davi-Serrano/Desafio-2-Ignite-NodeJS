    "paths":{
        "/users":{
            "post":{
                "tags": ["user"],
                "summary": "Cria um novo usuário.",
                "description": "Campos obrigatórios para criação de um usuário.",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema":{
                                "type": "Object",
                                "properties":{
                                    "name": {
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"string"
                                    }
                                },
                                "example":{
                                    "name": "Davi Serrano",
                                    "email": "teste@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201": {
                        "summary": "Sucesso",
                        "description": "Operação realizada com sucesso",
                        "content":{
                            "aplication/json":{
                                "schema":{
                                    "type": "object",
                                    "properties": {
                                        "id":{
                                            "type":"string",
                                            "format": "uuid"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date"
                                        }
                                    }
                                },
                                "example":{
                                    "id": "123e4567-e89b-12d3-a456-426614174000",
                                    "name": "Davi Serrano",
                                    "email": "teste@gmail.com",
                                    "admin": "false",
                                    "created_at": "02-02-2022",
                                    "updated_at": "02-02-2022"
                                }
                            }
                        }
                    },
                    "400":{
                        "summary": "Erro",
                        "description": "Email já está sendo utilizado",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type":"Object",
                                    "properties":{
                                        "error":{
                                            "type": "string"
                                        }
                                    }
                                },
                                "example":{
                                    "error": "This email already in use"
                                }
                            }
                        }
                    }
                }         
            },
            "get":{
                "tags": ["user"],
                "summary": "Retorna todos os usuários.",
                "description": "Somente usuário admin pode acessar.",
                "parameters":[
                    {
                        "in": "header",
                        "required": true,
                        "name": "user_id",
                        "description": "user ID",
                        "schema": {
                                "type": "string", 
                                "format":"uuid"
                        }
                    }
                ],
                "responses":{
                    "200": {
                        "summary": "Sucesso",
                        "description": "Operação realizada com sucesso.",
                        "content":{
                            "application/json":{
                                "schema": {      
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id":{
                                                "type":"string",
                                                "format": "uuid"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date"
                                            }
                                        }
                                    },       
                                    "example":[
                                        {
                                            "id": "123e4567-e89b-12d3-a456-426614174000",
                                            "name": "Davi Serrano",
                                            "email": "teste@gmail.com",
                                            "admin": true,
                                            "created_at": "02-02-2022",
                                            "updated_at": "02-02-2022"
                                        },
                                        {
                                            "id": "123e4567-e89b-12d3-a456-426614174003",
                                            "name": "David Serrano",
                                            "email": "teste1@gmail.com",
                                            "admin": false,
                                            "created_at": "02-02-2022",
                                            "updated_at": "02-02-2022"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400":{
                        "summary": "Erro",
                        "description": "User sem permissão ou usuário não encontrado.",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"Object",
                                    "properties": {
                                        "type": "string"
                                    },
                                    "example":{
                                        "error": "You need to be an administrator to list all users."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
